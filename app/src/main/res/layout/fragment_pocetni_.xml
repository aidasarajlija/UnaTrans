<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragmenti.Pocetni_Fragment"
    android:background="#eeeeee"
>

<!-- TODO: Update blank fragment layout -->



    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >


            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Odjava"
                android:id="@+id/btnOdjava"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:gravity="center"
              android:layout_alignParentRight="true"
                android:textColor="@android:color/white"/>
        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Una trans"
    android:gravity="center"
    android:id="@+id/info"
    android:textSize="60sp"
    android:textColor="#442c2e"
    android:fontFamily="cursive"
    android:layout_marginTop="60dp"
   />

<Button
    android:layout_width="256dp"
    android:layout_height="76dp"
    android:id="@+id/btnRedVoznje"
    android:text="Red vožnje"
    android:layout_centerInParent="true"
    android:background="#00acc1"
    android:layout_below="@id/info"
    android:textSize="25dp"
    android:layout_marginTop="100dp"
    android:textColor="@android:color/white"

    />


<Button
    android:layout_width="256dp"
    android:layout_height="76dp"
    android:layout_centerInParent="true"
    android:background="#00acc1"
    android:id="@+id/btnZakupAutobusa"
    android:layout_below="@id/btnRedVoznje"
    android:layout_marginTop="5dp"
    android:text="Zakup autobusa"
    android:textSize="25dp"

    android:textColor="@android:color/white"

    />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Sigurnu i udobnu vožnju želi Vam Una trans!"
    android:textSize="20dp"
    android:fontFamily="cursive"
    android:gravity="center"
    android:textColor="#442c2e"
    android:layout_alignParentBottom="true"/>




</RelativeLayout>